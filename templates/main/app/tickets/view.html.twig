{% extends "base.html.twig" %}
{% block body %}

    <h2>Vos tickets</h2>
	<table class="table">
        <tr>
            <th>Intitule</th>
            <th>Date</th>
            <th>poste</th>
            <th>Action</th>
        </tr>
        {% for tick in ticket %}
            <tr>
                <td>{{ tick.intitule }}</td>
                <td>{{ tick.date_de_creation | date('d/m/Y')}}</td>
                <td>{{ tick.batiment}}{{ tick.salle}}{{ tick.poste}}</td>
				<td><a href="{{ url("ticket.consulter", {"ticket":tick.id_ticket}) }}">consulter</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No content available</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}